<div id="job_list" xmlns="http://www.w3.org/1999/html">
    <h1>All jobs</h1>
    <% @jobs.each do |job| %>
        <h4><%= job.name %></h4>
        <p><%= job.description.html_safe %></p>
        <div id="job_<%=job.id%>_comments">
          <table>
            <tr>
                <th>Comments</th>
                <th><button class="add_comment" id="<%= job.id%>">Add Comment</button></span></th>
            </tr>
            <tr>
              <td>
                <div id="<%= job.id%>_comment_form" style="display: none">
                   <textarea class="comment_description" id="<%=job.id%>_comment_description"></textarea>
                   <button class="submit_comment" data-id="<%= job.id%>">Submit</button>
                </div>
              </td>
            </tr>
            <%job.comments.each do |comment|%>
                <%= render partial: "comments/comments", locals:{ comment: comment} %>
            <% end %>
          </table>
      </div>
      <hr/>
    <% end %>

</div>